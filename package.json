{
  "name": "@bloom-us/envar",
  "description": "Type-safe environment variables manager with runtime validation, flexible transformations, and first-class TypeScript support",
  "module": "index.ts",
  "version": "0.1.0",
  "type": "module",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bloom-us/envar.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "dotenv": "^16.0.0"
  },
  "peerDependenciesMeta": {
    "dotenv": {
      "optional": true
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=node && tsc",
    "test": "bun test/setup.ts && NODE_ENV=test bun test ./test/*.spec.ts",
    "publish-package": "bun run test && bun run build && dotenv npm publish"
  }
}
